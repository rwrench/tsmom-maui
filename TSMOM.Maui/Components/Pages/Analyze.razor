@page "/analyze"
@using TSMOM.Core.Models
@using TSMOM.Core.Services
@inject MomentumService MomentumService

<h1>Momentum Analysis</h1>

@* Step 1: Date Range *@
<div class="mb-4">
    <div class="card">
        <div class="card-header">Step 1: Select Date Range</div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" @bind="startDate" disabled="@(currentStep > 1)" />
                </div>
                <div class="col-6 mb-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" @bind="endDate" disabled="@(currentStep > 1)" />
                </div>
            </div>
        </div>
    </div>
</div>

@* Step 2: Stock to Buy *@
<div class="mb-4">
    <div class="card @(currentStep >= 1 ? "" : "text-muted")">
        <div class="card-header">Step 2: Enter Stock to Buy</div>
        <div class="card-body">
            <EditForm Model="@this" OnValidSubmit="ValidateBuyStockAsync">
                <div class="mb-3">
                    <label for="buyTicker" class="form-label">Ticker Symbol</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="buyTicker"
                               @bind="buyTicker" @bind:event="oninput"
                               placeholder="e.g. AAPL"
                               disabled="@(currentStep > 2 || isLoading)" />
                        <button type="submit" class="btn btn-primary"
                                disabled="@(string.IsNullOrWhiteSpace(buyTicker) || isLoading || currentStep > 2)">
                            @if (isLoading && currentStep == 2)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            Validate
                        </button>
                    </div>
                </div>
            </EditForm>

            @if (buyResult != null)
            {
                @if (buyResult.Error != null)
                {
                    <div class="alert alert-danger mb-0">@buyResult.Error</div>
                }
                else if (!buyResult.IsBuyCandidate)
                {
                    <div class="alert alert-warning mb-0">
                        <strong>@buyResult.Ticker</strong> has negative momentum (@buyResult.Momentum?.ToString("F2")) - not a buy candidate.
                        <br/>Try another ticker.
                    </div>
                }
                else
                {
                    <div class="alert alert-success mb-0">
                        <strong>@buyResult.Ticker</strong> - Good buy candidate!
                        <br/>Momentum: <strong>+@buyResult.Momentum?.ToString("F2")</strong> (@buyResult.PercentChange?.ToString("F2")%)
                        <br/>Price: $@buyResult.StartPrice?.ToString("F2") â†’ $@buyResult.EndPrice?.ToString("F2")
                    </div>
                }
            }
        </div>
    </div>
</div>

@* Step 3: Portfolio Analysis *@
@if (currentStep >= 3)
{
    <div class="mb-4">
        <div class="card">
            <div class="card-header">Step 3: Analyze Portfolio for Sell Candidate</div>
            <div class="card-body">
                <EditForm Model="@this" OnValidSubmit="AnalyzePortfolioAsync">
                    <div class="mb-3">
                        <label for="tickers" class="form-label">Portfolio Tickers (comma or newline separated)</label>
                        <textarea class="form-control" id="tickers" rows="4"
                                  @bind="tickerInput"
                                  placeholder="AAPL, MSFT, GOOGL, AMZN"
                                  disabled="@isLoading"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" disabled="@isLoading">
                        @if (isLoading && currentStep == 3)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Analyze
                    </button>
                </EditForm>
            </div>
        </div>
    </div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

@* Results *@
@if (portfolioResult != null)
{
    <div class="mb-4">
        <div class="row">
            <div class="col-6">
                <div class="alert alert-success">
                    <strong>Stock to Buy:</strong> @confirmedBuyTicker
                </div>
            </div>
            <div class="col-6">
                @if (portfolioResult.BestSell != null)
                {
                    <div class="alert alert-warning">
                        <strong>Stock to Sell:</strong> @portfolioResult.BestSell (lowest momentum)
                    </div>
                }
            </div>
        </div>
    </div>

    <h3>Portfolio Analysis</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ticker</th>
                <th>Start Price</th>
                <th>End Price</th>
                <th>Momentum</th>
                <th>% Change</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in portfolioResult.Results.OrderByDescending(r => r.Momentum ?? double.MinValue))
            {
                var isSellCandidate = result.Ticker == portfolioResult.BestSell;
                <tr class="@(isSellCandidate ? "table-warning" : "")">
                    <td><strong>@result.Ticker</strong></td>
                    @if (result.Error != null)
                    {
                        <td colspan="5" class="text-danger">@result.Error</td>
                    }
                    else
                    {
                        <td>$@result.StartPrice?.ToString("F2")</td>
                        <td>$@result.EndPrice?.ToString("F2")</td>
                        <td class="@(result.Momentum >= 0 ? "text-success" : "text-danger")">
                            @(result.Momentum >= 0 ? "+" : "")@result.Momentum?.ToString("F2")
                        </td>
                        <td class="@(result.PercentChange >= 0 ? "text-success" : "text-danger")">
                            @(result.PercentChange >= 0 ? "+" : "")@result.PercentChange?.ToString("F2")%
                        </td>
                        <td>
                            @if (isSellCandidate)
                            {
                                <span class="badge bg-warning text-dark">Sell Candidate</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hold</span>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-outline-secondary" @onclick="Reset">Start Over</button>
}

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-3);
    private DateTime endDate = DateTime.Now;
    private string buyTicker = "";
    private string tickerInput = "";
    private bool isLoading = false;
    private string? errorMessage = null;
    private int currentStep = 1;

    private MomentumResponse? buyResult = null;
    private string? confirmedBuyTicker = null;
    private BatchMomentumResponse? portfolioResult = null;

    private async Task ValidateBuyStockAsync()
    {
        isLoading = true;
        errorMessage = null;
        buyResult = null;
        currentStep = 2;

        try
        {
            buyResult = await MomentumService.CalculateMomentumAsync(
                buyTicker.Trim().ToUpper(), startDate, endDate);

            if (buyResult != null && buyResult.IsBuyCandidate)
            {
                confirmedBuyTicker = buyResult.Ticker;
                currentStep = 3;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AnalyzePortfolioAsync()
    {
        isLoading = true;
        errorMessage = null;
        portfolioResult = null;

        try
        {
            var tickers = tickerInput
                .Split(new[] { ',', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(t => t.Trim().ToUpper())
                .Where(t => !string.IsNullOrEmpty(t))
                .ToList();

            if (tickers.Count == 0)
            {
                errorMessage = "Please enter at least one ticker symbol.";
                return;
            }

            portfolioResult = await MomentumService.CalculateBatchMomentumAsync(
                tickers, startDate, endDate);
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void Reset()
    {
        currentStep = 1;
        buyTicker = "";
        tickerInput = "";
        buyResult = null;
        confirmedBuyTicker = null;
        portfolioResult = null;
        errorMessage = null;
    }
}
