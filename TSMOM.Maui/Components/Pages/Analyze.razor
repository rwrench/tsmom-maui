@page "/"
@page "/analyze"
@using TSMOM.Core.Models
@using TSMOM.Core.Services
@inject MomentumService MomentumService

<h1>Momentum Analysis</h1>

@* Step 1: Date Range *@
<div class="mb-4">
    <div class="card">
        <div class="card-header">Step 1: Select Date Range</div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" class="form-control" id="startDate" @bind="startDate" disabled="@(currentStep > 1)" />
                </div>
                <div class="col-6 mb-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" class="form-control" id="endDate" @bind="endDate" disabled="@(currentStep > 1)" />
                </div>
            </div>
            @if (currentStep > 1)
            {
                <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="EditDates">
                    Edit Dates
                </button>
            }
        </div>
    </div>
</div>

@* Step 2: Stock to Buy *@
<div class="mb-4">
    <div class="card @(currentStep >= 1 ? "" : "text-muted")">
        <div class="card-header">Step 2: Find Best Stock to Buy</div>
        <div class="card-body">
            <div class="mb-3">
                <label for="buyCandidates" class="form-label">Candidate Tickers (comma or newline separated)</label>
                <textarea class="form-control" id="buyCandidates" rows="3"
                          @bind="buyCandidatesInput"
                          placeholder="AAPL, MSFT, GOOGL, NVDA"
                          disabled="@(currentStep > 2 || isLoading)"></textarea>
            </div>
            <button type="button" class="btn btn-primary" @onclick="FindBestBuyAsync"
                    disabled="@(string.IsNullOrWhiteSpace(buyCandidatesInput) || isLoading || currentStep > 2)">
                @if (isLoading && currentStep == 2)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                Find Best Performer
            </button>
            @if (currentStep > 2)
            {
                <button type="button" class="btn btn-outline-secondary ms-2" @onclick="EditBuyCandidates">
                    Edit
                </button>
            }

            @if (buyCandidatesResult != null)
            {
                @if (!buyCandidatesResult.Results.Any(r => r.Error == null))
                {
                    <div class="alert alert-danger mt-3">
                        No valid stock data found for the entered tickers:
                        <ul class="mb-0 mt-2">
                            @foreach (var result in buyCandidatesResult.Results)
                            {
                                <li><strong>@result.Ticker</strong>: @result.Error</li>
                            }
                        </ul>
                    </div>
                    <button class="btn btn-outline-warning mt-2" @onclick="RetryFailedBuyCandidatesAsync" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Retry All
                    </button>
                }
                else if (buyCandidatesResult.BestBuy == null)
                {
                    <div class="alert alert-warning mt-3 mb-0">No stocks with positive momentum found.</div>
                }
                else
                {
                    var bestBuyResult = buyCandidatesResult.Results.First(r => r.Ticker == buyCandidatesResult.BestBuy);
                    <div class="alert alert-success mt-3">
                        <strong>Best Performer: @bestBuyResult.Ticker</strong>
                        <br/>Momentum: <strong>@(bestBuyResult.Momentum >= 0 ? "+" : "")@bestBuyResult.Momentum?.ToString("F2")</strong> (@bestBuyResult.PercentChange?.ToString("F2")%)
                        <br/>Price: $@bestBuyResult.StartPrice?.ToString("F2") â†’ $@bestBuyResult.EndPrice?.ToString("F2")
                    </div>

                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>Ticker</th>
                                <th>Momentum</th>
                                <th>% Change</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in buyCandidatesResult.Results.OrderByDescending(r => r.PercentChange ?? double.MinValue))
                            {
                                var isBestBuy = result.Ticker == buyCandidatesResult.BestBuy;
                                <tr class="@(isBestBuy ? "table-success" : (result.Error != null ? "table-danger" : ""))">
                                    <td><strong>@result.Ticker</strong></td>
                                    @if (result.Error != null)
                                    {
                                        <td colspan="3" class="text-danger">@result.Error</td>
                                    }
                                    else
                                    {
                                        <td class="@(result.Momentum >= 0 ? "text-success" : "text-danger")">
                                            @(result.Momentum >= 0 ? "+" : "")@result.Momentum?.ToString("F2")
                                        </td>
                                        <td class="@(result.PercentChange >= 0 ? "text-success" : "text-danger")">
                                            @(result.PercentChange >= 0 ? "+" : "")@result.PercentChange?.ToString("F2")%
                                        </td>
                                        <td>
                                            @if (isBestBuy)
                                            {
                                                <span class="badge bg-success">Best Buy</span>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (buyCandidatesResult.Results.Any(r => r.Error != null))
                    {
                        <button class="btn btn-outline-warning btn-sm" @onclick="RetryFailedBuyCandidatesAsync" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            Retry Failed (@buyCandidatesResult.Results.Count(r => r.Error != null))
                        </button>
                    }
                }
            }
        </div>
    </div>
</div>

@* Step 3: Portfolio Analysis *@
@if (currentStep >= 3)
{
    <div class="mb-4">
        <div class="card">
            <div class="card-header">Step 3: Analyze Portfolio for Sell Candidate</div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="tickers" class="form-label">Portfolio Tickers (comma or newline separated)</label>
                    <textarea class="form-control" id="tickers" rows="4"
                              @bind="tickerInput"
                              placeholder="AAPL, MSFT, GOOGL, AMZN"
                              disabled="@isLoading"></textarea>
                </div>
                <button type="button" class="btn btn-primary" @onclick="AnalyzePortfolioAsync" disabled="@isLoading">
                    @if (isLoading && currentStep == 3)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    Analyze
                </button>
            </div>
        </div>
    </div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @errorMessage
    </div>
}

@* Results *@
@if (portfolioResult != null)
{
    <div class="mb-4">
        <div class="row">
            <div class="col-6">
                <div class="alert alert-success">
                    <strong>Stock to Buy:</strong> @confirmedBuyTicker
                </div>
            </div>
            <div class="col-6">
                @if (portfolioResult.BestSell != null)
                {
                    <div class="alert alert-warning">
                        <strong>Stock to Sell:</strong> @portfolioResult.BestSell (lowest momentum)
                    </div>
                }
            </div>
        </div>
    </div>

    <h3>Portfolio Analysis</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ticker</th>
                <th>Start Price</th>
                <th>End Price</th>
                <th>Momentum</th>
                <th>% Change</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in portfolioResult.Results.OrderByDescending(r => r.PercentChange ?? double.MinValue))
            {
                var isSellCandidate = result.Ticker == portfolioResult.BestSell;
                <tr class="@(isSellCandidate ? "table-warning" : "")">
                    <td><strong>@result.Ticker</strong></td>
                    @if (result.Error != null)
                    {
                        <td colspan="5" class="text-danger">@result.Error</td>
                    }
                    else
                    {
                        <td>$@result.StartPrice?.ToString("F2")</td>
                        <td>$@result.EndPrice?.ToString("F2")</td>
                        <td class="@(result.Momentum >= 0 ? "text-success" : "text-danger")">
                            @(result.Momentum >= 0 ? "+" : "")@result.Momentum?.ToString("F2")
                        </td>
                        <td class="@(result.PercentChange >= 0 ? "text-success" : "text-danger")">
                            @(result.PercentChange >= 0 ? "+" : "")@result.PercentChange?.ToString("F2")%
                        </td>
                        <td>
                            @if (isSellCandidate)
                            {
                                <span class="badge bg-warning text-dark">Sell Candidate</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Hold</span>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-outline-secondary" @onclick="Reset">Start Over</button>
}

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-3);
    private DateTime endDate = DateTime.Now;
    private string buyCandidatesInput = "";
    private string tickerInput = "";
    private bool isLoading = false;
    private string? errorMessage = null;
    private int currentStep = 1;

    private BatchMomentumResponse? buyCandidatesResult = null;
    private string? confirmedBuyTicker = null;
    private BatchMomentumResponse? portfolioResult = null;

    private async Task FindBestBuyAsync()
    {
        isLoading = true;
        errorMessage = null;
        buyCandidatesResult = null;
        currentStep = 2;

        try
        {
            var tickers = buyCandidatesInput
                .Split(new[] { ',', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(t => t.Trim().ToUpper())
                .Where(t => !string.IsNullOrEmpty(t))
                .ToList();

            if (tickers.Count == 0)
            {
                errorMessage = "Please enter at least one ticker symbol.";
                return;
            }

            buyCandidatesResult = await MomentumService.CalculateBatchMomentumAsync(
                tickers, startDate, endDate);

            if (buyCandidatesResult.BestBuy != null)
            {
                confirmedBuyTicker = buyCandidatesResult.BestBuy;
                currentStep = 3;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RetryFailedBuyCandidatesAsync()
    {
        if (buyCandidatesResult == null) return;

        isLoading = true;
        errorMessage = null;

        try
        {
            var failedTickers = buyCandidatesResult.Results
                .Where(r => r.Error != null)
                .Select(r => r.Ticker)
                .ToList();

            if (failedTickers.Count == 0) return;

            var retryResults = await MomentumService.CalculateBatchMomentumAsync(
                failedTickers, startDate, endDate);

            // Merge retry results with existing successful results
            var successfulResults = buyCandidatesResult.Results
                .Where(r => r.Error == null)
                .ToList();
            successfulResults.AddRange(retryResults.Results);

            // Recalculate best buy/sell from merged results
            var validResults = successfulResults.Where(r => r.Error == null && r.PercentChange.HasValue).ToList();
            string? bestBuy = validResults.Any()
                ? validResults.OrderByDescending(r => r.PercentChange).First().Ticker
                : null;
            string? bestSell = validResults.Any()
                ? validResults.OrderBy(r => r.PercentChange).First().Ticker
                : null;

            buyCandidatesResult = new BatchMomentumResponse
            {
                Results = successfulResults,
                BestBuy = bestBuy,
                BestSell = bestSell
            };

            if (buyCandidatesResult.BestBuy != null)
            {
                confirmedBuyTicker = buyCandidatesResult.BestBuy;
                currentStep = 3;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Retry failed: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AnalyzePortfolioAsync()
    {
        isLoading = true;
        errorMessage = null;
        portfolioResult = null;

        try
        {
            var tickers = tickerInput
                .Split(new[] { ',', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries)
                .Select(t => t.Trim().ToUpper())
                .Where(t => !string.IsNullOrEmpty(t))
                .ToList();

            if (tickers.Count == 0)
            {
                errorMessage = "Please enter at least one ticker symbol.";
                return;
            }

            portfolioResult = await MomentumService.CalculateBatchMomentumAsync(
                tickers, startDate, endDate);
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EditDates()
    {
        currentStep = 1;
        buyCandidatesResult = null;
        confirmedBuyTicker = null;
        portfolioResult = null;
        StateHasChanged();
    }

    private void EditBuyCandidates()
    {
        currentStep = 2;
        buyCandidatesResult = null;
        confirmedBuyTicker = null;
        portfolioResult = null;
        StateHasChanged();
    }

    private void Reset()
    {
        currentStep = 1;
        buyCandidatesInput = "";
        tickerInput = "";
        buyCandidatesResult = null;
        confirmedBuyTicker = null;
        portfolioResult = null;
        errorMessage = null;
    }
}
